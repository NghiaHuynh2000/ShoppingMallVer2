<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hcmute.edu.vn.mssv18110326.Activity.ChatMainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/image_message"
        android:layout_width="415dp"
        android:layout_height="222dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/paperplane"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="215dp"
        app:lottie_repeatCount="200000"
        >

    </com.airbnb.lottie.LottieAnimationView>

    <LinearLayout
        android:layout_below="@+id/image_message"
        android:orientation="vertical"
        android:id="@+id/group_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/group_login"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_btnLogin"
            android:background="@color/primaryDark"
            android:textColor="@color/graylight"
            android:text="Connect to admin"
            android:layout_marginRight="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>