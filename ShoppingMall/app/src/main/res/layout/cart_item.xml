<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="110dp"
android:layout_margin="7dp"
android:elevation="10dp"
app:cardCornerRadius="10dp">

<LinearLayout
    android:id="@+id/layout_bigItem"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:src="@drawable/aothun1"
            android:layout_height="match_parent"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="245dp"
        android:layout_height="match_parent"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="40dp"
        android:layout_toEndOf="@+id/cardView"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:paddingStart="5dp"
            android:text="Áo thun con mèo"
            android:textColor="#00AC47"
            android:textSize="14dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:paddingStart="5dp"
                android:text="Màu sắc: "
                android:textColor="#676767"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/tvColor"
                android:paddingStart="5dp"
                android:text="Kích cỡ: "
                android:textColor="#676767"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:paddingStart="5dp"
                android:text="Số lượng:  "
                android:textColor="#676767"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="3dp"
                android:layout_toRightOf="@+id/txtSL"
                android:background="@drawable/negative" />

            <TextView
                android:id="@+id/txtsoluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/btnSub"
                android:paddingStart="5dp"
                android:text="1"
                android:textColor="#676767"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="3dp"
                android:layout_toRightOf="@+id/txtsoluong"
                android:background="@drawable/plus" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtGiaSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="20.000vnd"
            android:textColor="#000"
            android:textSize="12dp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>




</androidx.cardview.widget.CardView>